<p id="notice"><%= notice %></p>

<h1><%= @project.name %> <small><%= @project.version %></small></h1>
<p><%= @project.description %></p>
<p>Licensed under the <%= @project.license %> <% if @project.license != "GPL" %>license<% end %>.</p>

<h2>README</h2>
<div class="well well-lg">
  <%= markdown(@readme.contents) %>
</div>

<h2>Contents</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devdirectories.each do |devdirectory| %>
      <tr>
        <td><%= link_to devdirectory.name, devdirectory %></td>
        <td><%= link_to 'Rename', edit_devdirectory_path(devdirectory) %></td>
        <td><%= link_to 'Delete', devdirectory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% @devfiles.each do |devfile| %>
      <tr>
        <td><%= link_to "#{devfile.name}.#{devfile.extension}", devfile %></td>
        <td><%= link_to 'Rename', edit_devfile_path(devfile) %></td>
        <td><%= link_to 'Delete', devfile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
